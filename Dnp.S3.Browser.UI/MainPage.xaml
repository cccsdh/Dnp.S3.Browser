<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Dnp.S3.Browser.UI"
             xmlns:components="clr-namespace:Dnp.S3.Browser.UI.Components"
             x:Class="Dnp.S3.Browser.UI.MainPage">

    <VerticalStackLayout>
        <Button Text="Open S3 Browser" Clicked="OnOpenS3BrowserClicked" />
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </VerticalStackLayout>

</ContentPage>
